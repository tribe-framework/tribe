{
    "webapp": {
        "name": "tribe",
        "slug": "webapp",
        "description": "An open source, collaborative project management framework.",
        "api_url": "https://tribe.tribe-framework.org",
        "interface_urls": [
            { 
                "title": "Home", 
                "slug": "home", 
                "url": "https://tribe-framework.org",
                "types": ["section", "page"]
            },
            { 
                "title": "Junction", 
                "slug": "junction", 
                "url": "https://junction.tribe-framework.org",
                "types": ["user", "section", "page"]
            }
        ],
        "format": "types.json",
        "version": "1.0",
        "searchable_types": ["section", "page"],
        "allow_type_change": false,
        "display_activity_log": false,
        "soft_delete_records": false
    },
    "user": {
        "name": "user",
        "slug": "user",
        "plural": "users",
        "readonly": false,
        "description": "List of users.",
        "modules": [
            {
                "input_primary": true,
                "input_placeholder": "Enter User ID",
                "input_slug": "user_id",
                "var_type": "string",
                "input_type": "hidden",
                "input_unique": true,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": false
            },
            {
                "input_slug": "name",
                "input_placeholder": "Enter your full name",
                "input_type": "text",
                "var_type": "string",
                "input_unique": false,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            },
            {
                "input_slug": "email",
                "input_placeholder": "Email address",
                "input_type": "email",
                "var_type": "string",
                "input_unique": false,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            },
            {
                "input_slug": "mobile",
                "input_placeholder": "Mobile number",
                "input_type": "tel",
                "var_type": "string",
                "input_unique": false,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            },
            {
                "input_slug": "password",
                "input_placeholder": "Enter password",
                "input_type": "text",
                "var_type": "string",
                "input_unique": false,
                "list_field": false,
                "list_searchable": false,
                "list_sortable": false
            },
            {
                "input_slug": "role_slug",
                "input_placeholder": "User role",
                "input_type": "select",
                "var_type": "string",
                "input_options": [
                    { "slug": "admin", "title": "Admin" },
                    { "slug": "visitor", "title": "Visitor" }
                ],
                "input_unique": false,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            }
        ]
    },
    "section": {
        "name": "section",
        "slug": "section",
        "plural": "sections",
        "readonly": false,
        "sendable": false,
        "editable": true,
        "description": "List of sections.",
        "modules": [
            {
                "input_slug": "title",
                "input_primary": true,
                "input_type": "text",
                "var_type": "string",
                "input_placeholder": "Enter section title",
                "input_unique": true,
                "list_field": true,
                "list_searchable": true,
                "list_sortable": true
            }
        ]
    },
    "notification": {
        "name": "notification",
        "slug": "notification",
        "plural": "notifications",
        "readonly": false,
        "sendable": true,
        "editable": false,
